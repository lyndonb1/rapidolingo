{
  "scenarios": [
    {
      "title": "Ordering at a Restaurant",
      "difficulty": "beginner",
      "dialogue": [
        {"speaker": "waiter", "spanish": "Buenas tardes. ¿Qué desea?", "english": "Good afternoon. What would you like?"},
        {"speaker": "customer", "spanish": "Una mesa para dos, por favor.", "english": "A table for two, please."},
        {"speaker": "waiter", "spanish": "Claro, síganme por favor.", "english": "Of course, follow me please."},
        {"speaker": "customer", "spanish": "¿Qué recomienda?", "english": "What do you recommend?"},
        {"speaker": "waiter", "spanish": "La paella es muy popular.", "english": "The paella is very popular."},
        {"speaker": "customer", "spanish": "Perfecto. Dos paellas, por favor.", "english": "Perfect. Two paellas, please."},
        {"speaker": "customer", "spanish": "Y dos aguas también.", "english": "And two waters as well."},
        {"speaker": "waiter", "spanish": "Muy bien. ¿Algo más?", "english": "Very good. Anything else?"},
        {"speaker": "customer", "spanish": "No, eso es todo. Gracias.", "english": "No, that's all. Thank you."},
        {"speaker": "customer", "spanish": "La cuenta, por favor.", "english": "The check, please."}
      ],
      "vocabulary": ["mesa", "por favor", "desea", "recomienda", "paella", "agua", "cuenta"],
      "tips": "Always use 'por favor' to be polite. 'La cuenta' means the check/bill."
    },
    {
      "title": "At the Airport",
      "difficulty": "beginner",
      "dialogue": [
        {"speaker": "agent", "spanish": "Buenos días. Su pasaporte, por favor.", "english": "Good morning. Your passport, please."},
        {"speaker": "traveler", "spanish": "Aquí está.", "english": "Here it is."},
        {"speaker": "agent", "spanish": "¿Dónde está su equipaje?", "english": "Where is your luggage?"},
        {"speaker": "traveler", "spanish": "Tengo una maleta.", "english": "I have one suitcase."},
        {"speaker": "agent", "spanish": "Perfecto. Su tarjeta de embarque.", "english": "Perfect. Your boarding pass."},
        {"speaker": "traveler", "spanish": "¿Cuál es la puerta?", "english": "Which is the gate?"},
        {"speaker": "agent", "spanish": "Puerta número doce.", "english": "Gate number twelve."},
        {"speaker": "traveler", "spanish": "Muchas gracias.", "english": "Thank you very much."}
      ],
      "vocabulary": ["pasaporte", "equipaje", "maleta", "tarjeta de embarque", "puerta"],
      "tips": "Keep your pasaporte (passport) ready. Know your puerta (gate) number."
    },
    {
      "title": "Checking into a Hotel",
      "difficulty": "beginner",
      "dialogue": [
